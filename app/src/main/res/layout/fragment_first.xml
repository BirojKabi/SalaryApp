        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/wage_board"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_700"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/arrearsT"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="458dp"
        android:layout_marginRight="50dp"
        android:hint="@string/arrearsT"
        android:textColorHint="#651FFF"
        app:boxCollapsedPaddingTop="10dp"
        app:boxStrokeColor="#250273"
        app:helperText="end date for arrears Calculation"
        app:helperTextEnabled="false"
        app:helperTextTextColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/arrearsT_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="19dp"
            tools:layout_editor_absoluteY="458dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/arrearsT_fbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="462dp"
        android:layout_marginRight="6dp"
        android:backgroundTint="@color/teal_100"
        android:clickable="true"
        android:contentDescription="TODO"
        android:elevation="10dp"
        android:foregroundTint="@color/purple_500"
        android:src="@drawable/ic_datepicker"
        android:tint="@color/purple_500"
        android:tintMode="src_atop"
        app:backgroundTint="@color/teal_100"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/wage_board"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/purple_700"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="548dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="NEXT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>